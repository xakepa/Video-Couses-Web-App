<body>

    <main>
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
                <h1 class="display-4">Video Tutorials</h1>
                <p class="lead">Start Self-Study Today: It'll Change Your Life</p>
            </div>
        </div>

        <div>
            <h1 class="text-center">Top Courses</h1>
            <div class="container mt-3">
                <div class="row d-flex justify-content-center">

                    <div class="card-deck">
                        {{#each courses}}
                        {{#if this.isPublic}}
                        {{>singleCourse}}
                        {{/if}}
                        {{/each}}
                    </div>

                </div>
                {{#unless courses}}
                <h4 class="text-center">No courses...</h4>
                {{/unless}}
            </div>
        </div>
    </main>
    </div>
</body>

</html>