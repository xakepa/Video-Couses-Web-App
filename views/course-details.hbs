<body>
    <div class="container">

        <main>
            <div class="container">
                <h1 class="my-4">Course title : {{title}}
                </h1>

                <div class="row">

                    <div class="col-md-8">
                        <img class="img-fluid" src="{{imageUrl}}" alt="courseImageHere" />
                    </div>

                    <div class="col-md-4 text-center">
                        <h3 class="my-3">Course Description</h3>
                        <p>{{description}}</p>
                        {{#if isCreator}}
                        <a class="btn btn-warning" href="/edit/{{_id}}">Edit</a>
                        <a class="btn btn-danger" href="/delete/{{_id}}">Delete</a>
                        {{else}}
                        {{#if isEnrolled}}
                        <span class="enrolled-span">You are already enrolled</span>
                        {{else}}
                        <a class="btn btn-primary" href="/details/join/{{_id}}">Enroll</a>
                        {{/if}}
                        {{/if}}

                    </div>
                </div>
            </div>
        </main>

    </div>
</body>